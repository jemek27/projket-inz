# ==========================================
# HDiSED Docker Environment Configuration
# ==========================================
# Copy this file to .env and customize as needed

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=hdised_client_db
POSTGRES_PORT=5432
POSTGRES_INTERNAL_PORT=5432

# ==========================================
# TAKE-MCP Database Configuration
# ==========================================
TAKE_POSTGRES_HOST=postgres
TAKE_POSTGRES_DB=takerestaurant
TAKE_POSTGRES_USER=admin
TAKE_POSTGRES_PASSWORD=admin
TAKE_POSTGRES_INTERNAL_PORT=5432

# ==========================================
# Ollama / LLM Configuration
# ==========================================
# For local Ollama running on host machine:
OLLAMA_BASE_URL=http://host.docker.internal:11434

# For Ollama in Docker on the same network:
# OLLAMA_BASE_URL=http://ollama:11434

# For remote Ollama/OpenAI compatible API:
# OLLAMA_BASE_URL=https://your-api-endpoint.com

# Model names
OLLAMA_MODEL=gpt-oss:20b
EMBEDDING_MODEL=embeddinggemma:latest

# ==========================================
# MCP Configuration
# ==========================================
MCP_JAR_PATH=/app/mcp-servers/TAKE-MCP.jar

# ==========================================
# RAG Configuration
# ==========================================
RAG_ENABLED=true
RAG_TOP_K=3
RAG_SIMILARITY_THRESHOLD=0.7

# ==========================================
# Chat Memory Configuration
# ==========================================
CHAT_MEMORY_WINDOW_SIZE=20

# ==========================================
# Server Ports
# ==========================================
BACKEND_PORT=8081
FRONTEND_PORT=3000

# ==========================================
# Frontend Configuration
# ==========================================
VITE_API_URL=/
